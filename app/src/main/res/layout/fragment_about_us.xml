<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_medium"
    app:cardCornerRadius="@dimen/padding_small"
    app:cardElevation="@dimen/padding_medium">

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/tw__solid_white"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/geekskool_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_medium">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/geekskool"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:padding="@dimen/padding_medium"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/geekskool_intro"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/geekskool_moto"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:padding="@dimen/padding_medium"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/app_suggestions"
            android:id="@+id/textView6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/geekskool_made_with_love"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/textView7" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:src="@drawable/tw__like_action"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/by_geekskool"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/textView8" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>